<Window x:Class="HourGlass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HourGlass.Controls"
        mc:Ignorable="d"
        Title="HourGlass"
        Width="320"
        Height="580"
        MinWidth="300"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#14212B"
        Foreground="#E3ECF2">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Grid Margin="0,6,0,0">
                <Slider x:Name="MinutesSlider"
                        Minimum="1"
                        Maximum="60"
                        Value="25"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        HorizontalAlignment="Stretch">
                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                    </Slider.Resources>
                </Slider>
            </Grid>
            <TextBlock x:Name="RemainingText"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Text="25:00" />
        </StackPanel>

        <Border Grid.Row="1"
                CornerRadius="12"
                Background="#0F202B"
                BorderThickness="1"
                BorderBrush="#263643">
            <Grid>
                <controls:HourglassControl x:Name="Hourglass"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Margin="12" />
                <Button x:Name="FlipButton"
                        Width="40"
                        Height="40"
                        Visibility="Collapsed"
                        ToolTip="Flip and restart"
                        Background="#1B2C39"
                        BorderBrush="#334857"
                        BorderThickness="1"
                        Padding="0"
                        Cursor="Hand"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Viewbox Width="22" Height="22" Stretch="Uniform">
                        <Path Fill="#E3ECF2"
                              Data="M16,17.65V7.83L13.17,10.66L12,9.5L17,4.5L22,9.5L20.83,10.66L18,7.83V17.65H16M8,6.35V16.17L10.83,13.34L12,14.5L7,19.5L2,14.5L3.17,13.34L6,16.17V6.35H8Z" />
                    </Viewbox>
                </Button>
            </Grid>
        </Border>

        <UniformGrid Grid.Row="2"
                     Rows="1"
                     Columns="3"
                     HorizontalAlignment="Center"
                     Margin="0,12,0,0">
            <Button x:Name="StartPauseButton"
                    Width="40"
                    Height="40"
                    Margin="4,0"
                    Background="#1B2C39"
                    BorderBrush="#334857"
                    BorderThickness="1"
                    Cursor="Hand"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    ToolTip="Start/Pause">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Path x:Name="StartPauseIcon"
                      Fill="#E3ECF2"
                      Stretch="Uniform"
                      Width="16"
                      Height="16"
                      Data="M 3 2 L 16 10 L 3 18 Z" />
            </Button>
            <Button x:Name="ResetButton"
                    Width="40"
                    Height="40"
                    Margin="4,0"
                    Background="#1B2C39"
                    BorderBrush="#334857"
                    BorderThickness="1"
                    Padding="0"
                    Cursor="Hand"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    ToolTip="Reset">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Viewbox Width="24"
                         Height="24"
                         Margin="-4,-4,0,0"
                         Stretch="Uniform">
                    <Path Fill="#E3ECF2"
                          Data="M17.65,6.35C16.2,4.9 14.21,4 12,4C7.58,4 4,7.58 4,12C4,16.42 7.58,20 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18C8.69,18 6,15.31 6,12C6,8.69 8.69,6 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" />
                </Viewbox>
            </Button>
            <ToggleButton x:Name="TopmostToggle"
                          Width="40"
                          Height="40"
                          Margin="4,0"
                          IsChecked="True"
                          Background="#1B2C39"
                          BorderBrush="#334857"
                          BorderThickness="1"
                          Padding="0"
                          Cursor="Hand"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          ToolTip="Always on top">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <Grid Width="24" Height="24">
                                <Path x:Name="TopmostOnIcon"
                                      Fill="#E3ECF2"
                                      Data="M7,10 H17 V21 H7 Z M9,10 V7 A3,3 0 0 1 15,7 V10 H13 V7 A1,1 0 0 0 11,7 V10 Z" />
                                <Path x:Name="TopmostOffIcon"
                                      Fill="#E3ECF2"
                                      Opacity="0"
                                      Data="M7,10 H17 V21 H7 Z M9,10 V6 A3,3 0 0 1 15,6 V7 H13 V6 A1,1 0 0 0 11,6 V10 Z" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="TopmostOnIcon" Property="Opacity" Value="1" />
                                <Setter TargetName="TopmostOffIcon" Property="Opacity" Value="0" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="TopmostOnIcon" Property="Opacity" Value="0" />
                                <Setter TargetName="TopmostOffIcon" Property="Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>
        </UniformGrid>
    </Grid>
</Window>
