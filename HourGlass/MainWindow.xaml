<Window x:Class="HourGlass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HourGlass.Controls"
        mc:Ignorable="d"
        Title="HourGlass"
        Width="360"
        Height="520"
        MinWidth="320"
        MinHeight="460"
        WindowStartupLocation="CenterScreen"
        Background="#14212B"
        Foreground="#E3ECF2">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Duration (minutes)" Foreground="#CCD6DD" />
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                <Slider x:Name="MinutesSlider"
                        Minimum="1"
                        Maximum="60"
                        Value="25"
                        Width="200"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True" />
                <TextBlock x:Name="MinutesLabel"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="25 min" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Remaining:"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"
                           Foreground="#CCD6DD" />
                <TextBlock x:Name="RemainingText"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="25:00" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1"
                CornerRadius="12"
                Background="#0F202B"
                BorderThickness="1"
                BorderBrush="#263643">
            <Grid>
                <controls:HourglassControl x:Name="Hourglass"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                <Button x:Name="FlipButton"
                        Width="90"
                        Height="36"
                        Content="Flip"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
            </Grid>
        </Border>

        <UniformGrid Grid.Row="2"
                     Rows="1"
                     Columns="3"
                     HorizontalAlignment="Center"
                     Margin="0,12,0,0">
            <Button x:Name="StartPauseButton"
                    Width="70"
                    Margin="4,0"
                    Content="Start" />
            <Button x:Name="ResetButton"
                    Width="70"
                    Margin="4,0"
                    Content="Reset" />
            <CheckBox x:Name="TopmostCheckBox"
                      Margin="8,0,0,0"
                      Content="Always on top"
                      IsChecked="True"
                      Foreground="#FFFFFF"
                      VerticalAlignment="Center" />
        </UniformGrid>
    </Grid>
</Window>
