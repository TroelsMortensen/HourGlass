<Window x:Class="HourGlass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HourGlass.Controls"
        mc:Ignorable="d"
        Title="HourGlass"
        Width="360"
        Height="520"
        MinWidth="320"
        MinHeight="460"
        WindowStartupLocation="CenterScreen"
        Background="#14212B"
        Foreground="#E3ECF2">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Grid Margin="0,6,0,0">
                <Slider x:Name="MinutesSlider"
                        Minimum="1"
                        Maximum="60"
                        Value="25"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        HorizontalAlignment="Stretch" />
            </Grid>
            <TextBlock x:Name="RemainingText"
                       Margin="0,8,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Text="25:00" />
        </StackPanel>

        <Border Grid.Row="1"
                CornerRadius="12"
                Background="#0F202B"
                BorderThickness="1"
                BorderBrush="#263643">
            <Grid>
                <controls:HourglassControl x:Name="Hourglass"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                <Button x:Name="FlipButton"
                        Width="90"
                        Height="36"
                        Content="Flip"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
            </Grid>
        </Border>

        <UniformGrid Grid.Row="2"
                     Rows="1"
                     Columns="3"
                     HorizontalAlignment="Center"
                     Margin="0,12,0,0">
            <Button x:Name="StartPauseButton"
                    Width="40"
                    Height="40"
                    Margin="4,0"
                    Background="#1B2C39"
                    BorderBrush="#334857"
                    BorderThickness="1"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Path x:Name="StartPauseIcon"
                      Fill="#E3ECF2"
                      Stretch="Uniform"
                      Width="16"
                      Height="16"
                      Data="M 3 2 L 16 10 L 3 18 Z" />
            </Button>
            <Button x:Name="ResetButton"
                    Width="40"
                    Height="40"
                    Margin="4,0"
                    Background="#1B2C39"
                    BorderBrush="#334857"
                    BorderThickness="1"
                    Padding="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Viewbox Width="24"
                         Height="24"
                         Margin="-4,-4,0,0"
                         Stretch="Uniform">
                    <Path Fill="#E3ECF2"
                          Data="M17.65,6.35C16.2,4.9 14.21,4 12,4C7.58,4 4,7.58 4,12C4,16.42 7.58,20 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18C8.69,18 6,15.31 6,12C6,8.69 8.69,6 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" />
                </Viewbox>
            </Button>
            <CheckBox x:Name="TopmostCheckBox"
                      Margin="8,0,0,0"
                      Content="Always on top"
                      IsChecked="True"
                      Foreground="#FFFFFF"
                      VerticalAlignment="Center" />
        </UniformGrid>
    </Grid>
</Window>
